{
  "expo": {
    "name": "Sophia Authenticator",
    "slug": "sophia-authenticator",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/tnilogo.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/tnilogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sophiauthenticator.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access camera for scanning QR codes"
      }
    },
    "android": {
      "package": "com.sophiauthenticator.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/tnilogo.png",
        "backgroundColor": "#007AFF"
      },
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "POST_NOTIFICATIONS",
        "android.permission.CAMERA"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access camera for scanning QR codes"
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/messaging"
    ],
    "extra": {
      "eas": {
        "projectId": "c1f17c6b-8403-41c8-b812-06522e422488"
      }
    }
  }
}
